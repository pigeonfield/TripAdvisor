<script src="//maps.google.com/maps/api/js?key=[your API key]"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<h3 class="current category"><%= params[:category] %></h3>


    <% if @destinations.count == 0 %>
        <h3>Ups! There are no Trip Advices in this category yet.</h3>
        
            <% if redactor_signed_in? %>
                <p><%= link_to "Add New Advice", new_destination_path %> to change this!</p>
            <% else %>
                <p><%= link_to "Log In", new_destination_path %> or <%= link_to "Sign Up", new_redactor_registration_path %> to add the new one!</p>
                 <p></p>
          <% end %>
        
        
    <% else %>
    
    <div class="row">
        <% @destinations.each do |destination| %>
        
            <div class="col-md-3">        
            <a href="/destinations/<%= destination.id %>">
                <%= image_tag destination.destination_img.url(:destination_index), class: "destination-index" %>
                <h4><%= link_to destination.name, destination_path(destination), class: "destination-index" %></h4>            
                
            </a>
            </div>
            



        <% end %> 
        
    </div>    
    
    <% end %>
